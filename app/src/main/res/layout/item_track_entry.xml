<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="entry"
			type="me.onebone.watchahomework.shared.repository.TracksPagingSource.TrackAndFavorite" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/img_artwork"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			tools:ignore="ContentDescription" />

		<TextView
			android:id="@+id/tv_collection"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toEndOf="@id/img_artwork"
			app:layout_constraintTop_toTopOf="parent"
			android:text="@{entry.track.collectionName}"
			tools:text="Collection"/>

		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toEndOf="@id/img_artwork"
			app:layout_constraintTop_toBottomOf="@id/tv_collection"
			android:text="@{entry.track.trackName}"
			android:textStyle="bold"
			tools:text="Title"/>

		<TextView
			android:id="@+id/tv_artist"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toEndOf="@id/img_artwork"
			app:layout_constraintTop_toBottomOf="@id/tv_title"
			android:text="@{entry.track.artistName}"
			tools:text="Artist" />

		<RatingBar
			android:id="@+id/rb_star"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:rating="@{entry.favorite ? 1 : 0}"
			android:numStars="1" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
